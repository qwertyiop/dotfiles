# Directories
ncmpcpp_directory = ~/.config/ncmpcpp
lyrics_directory = ~/Музыка/.lyrics
mpd_music_dir = ~/Музыка

# MPD connection settings
mpd_host = 127.0.0.1
mpd_port = 6601
mpd_connection_timeout = 5

# Visualizer
visualizer_in_stereo = "no"
visualizer_data_source = "/tmp/mpd.fifo"
visualizer_output_name = "my_fifo"
visualizer_sync_interval = "20"
visualizer_type = "spectrum"
visualizer_look = "▉▉"
visualizer_color = "green,yellow,red"

# General
mouse_support = yes
lines_scrolled = 2
mouse_list_scroll_whole_page = yes
external_editor = nano
use_console_editor = yes
allow_for_physical_item_deletion = no

# Lyrics
lyrics_fetchers = azlyrics, genius, sing365, metrolyrics, justsomelyrics, jahlyrics, plyrics, tekstowo, internet
fetch_lyrics_for_current_song_in_background = yes
store_lyrics_in_song_dir = no
follow_now_playing_lyrics = yes

# UI
progressbar_look = "━━━"
progressbar_color = "black"
progressbar_elapsed_color = "cyan"

playlist_display_mode = columns
autocenter_mode = yes
centered_cursor = no

user_interface = alternative
header_visibility = yes
titles_visibility = no
clock_display_seconds = no
display_volume_level = yes
display_bitrate = yes

startup_screen = "playlist"
startup_slave_screen = "lyrics"
locked_screen_width_part = 50
ask_for_locked_screen_width_part = no

song_columns_list_format = "(25)[yellow]{a} (25)[green]{brE} (47)[cyan]{t|f} (6f)[yellow]{l}"
