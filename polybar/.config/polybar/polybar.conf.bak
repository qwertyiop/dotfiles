[color]
bg = #292A29
fg = #E6E6E6
selected = #3F51B5
accent = #7986CB
destruction = #f44336
suggestion = #673AB7

#####################################################################

[global]
font-0 = "Roboto:weight=bold:size=10;3"
font-1 = "Material Design Icons Desktop:size=14;4"

locale = ru_RU.UTF8
	
background = ${color.bg}
foreground = ${color.fg}
line-size = 2

module-margin-right = 1
module-margin-left = 1

#####################################################################

[bar/top]
inherit = global
width = 100%
height = 20 
top = true

modules-left = menu-apps workspaces
modules-right = date time logout
modules-center = title

#####################################################################

[bar/bottom]
inherit = global
width = 100%
height = 20
bottom = true

modules-center = terminal filemanager browser mailclient passwdmanager calc
modules-left = pulseaudio mpd 
modules-right = xkeyboard wired wireless updates cpu-temp gpu-temp battery

override-redirect = true
tray-position = right
tray-maxsize = 16
tray-padding = 1
tray-background = ${color.bg}

#####################################################################

[module/wireless]
type = internal/network
interface = wlan0
interval = 1
format-connected = <ramp-signal>
format-packetloss = <ramp-signal>
format-disconnected = <label-disconnected>
ramp-signal-0 = 󰤯
ramp-signal-1 = 󰤟
ramp-signal-2 = 󰤢
ramp-signal-3 = 󰤥
ramp-signal-4 = 󰤨
label-disconnected =

#####################################################################

[module/wired]
type = internal/network
interface = enp14s0
interval = 1
format-connected = <label-connected>
format-disconnected = <label-disconnected>
label-connected = 󰌘 
label-disconnected =

#####################################################################

[module/pulseaudio]
type = internal/pulseaudio
sink = alsa_output.pci-0000_00_1b.0.analog-stereo
interval = 2
label-volume = "󰕾 %percentage%%"
label-muted = 󰖁
format-volume = <label-volume>
format-muted = <label-muted> 

#####################################################################

[module/title]
type = internal/xwindow

format = <label>
format-background = ${color.bg}
format-foreground = ${color.fg}

label = %title:0:120:...%
label-empty = 
label-empty-background = ${color.bg}

#####################################################################

[module/menu-apps]
type = custom/text
content = "󰣛  Приложения 󰍝"
content-underline = ${color.suggestion}
module-margin-right = 3
module-margin-left = 3
click-left = ~/.config/polybar/scripts/menu_full

#####################################################################

[module/date]
type = custom/script
exec = "/usr/bin/date '+%a, %d %B'"
interval = 2 
label = "󰃭 %output%"
click-left = "~/.config/polybar/scripts/popup-calendar.sh --popup &"

#####################################################################

[module/time]
type = internal/date
time = "%R"
label = "󰀠 %time%"

#####################################################################

[module/logout]
type  = custom/text
content = "󰐥 Выйти 󰍝"
content-underline = ${color.destruction}
click-left = oblogout &
module-margin-right = 3
module-margin-left = 3

#####################################################################

[module/xkeyboard]
type = internal/xkeyboard
blacklist-0 = scroll lock
format = <label-indicator><label-layout>

label-indicator-on-numlock = "󰰓 "
label-indicator-off-numlock = "󰰔 " 
label-indicator-off-capslock = "󰯳 " 
label-indicator-on-capslock = "󰯲 " 

label-layout = %icon%
layout-icon-default =
layout-icon-0 = "us;ENG"
layout-icon-1 = "ru;РУС"

#####################################################################

[module/workspaces]
type = internal/xworkspaces
pin-workspaces = false
enable-click = true

label-active = 󰄯 
label-occupied = 󰺕
label-urgent = 󰐾
label-empty = 󰄰

label-occupied-padding = 1
label-empty-padding = 1
label-urgent-padding = 1
label-active-padding = 1

label-occupied-background = ${color.destruction}

#####################################################################

[module/battery]
type = internal/battery
full-at = 100
battery = BAT0
adapter = AC0

poll-interval = 5

format-discharging = <animation-discharging><label-discharging>
format-charging = <animation-charging><label-charging>
format-full = <label-full>

label-full =
label-charging = %percentage%%
label-discharging = %percentage%%

animation-discharging-0 = 󱊡
animation-discharging-1 = 󱊢
animation-discharging-2 = 󱊣

animation-charging-0 = 󱊤
animation-charging-1 = 󱊥
animation-charging-2 = 󱊦

animation-charging-framerate = 500
animation-discharging-framerate = 500

label-discharging-background = ${color.destruction}
animation-discharging-background = ${color.destruction}

label-discharging-padding = 1
animation-discharging-padding = 1
animation-charging-padding = 1
label-charging-padding = 1

#####################################################################

[temperature-global]
type = internal/temperature
interval = 1

units = true
label-padding = 1
label-warn-background = ${color.destruction}
ramp-2-background = ${color.destruction}

ramp-0 = "󰔏"
ramp-1 = "󰸅"
ramp-2 = "󰸁"

base-temperature = 25
warn-temperature = 85

format = <label>
format-warn = <ramp><label-warn>

[module/gpu-temp]
inherit = temperature-global
termal-zone = 0
hwmon-path = /sys/devices/virtual/thermal/thermal_zone0/hwmon1/temp1_input

label =
label-warn = "GPU: %temperature-c% "

[module/cpu-temp]
inherit = temperature-global
termal-zone = 1
hwmon-path = /sys/devices/platform/coretemp.0/hwmon/hwmon3/temp1_input

label = 
label-warn = "CPU: %temperature-c% "

#####################################################################

[module/updates]
type = custom/script
exec = "dnf -q updateinfo --list --updates 2> /dev/null | wc -l"
interval = 1800
label = "󰆧 %output% "
format = <label>

#####################################################################

[module/mpd]
type = internal/mpd
host = 127.0.0.1
port = 6601
interval = 2

label-offline = "MPD OFFLINE"
label-offline-foreground = ${color.destruction}

label-song = %artist% - %title%
label-song-maxlen = 50
label-time = %elapsed% / %total%

icon-play = 󰁚
icon-pause = 󰏦
icon-stop = 󰙧
icon-prev = 󰙤
icon-next = 󰙢

format-online = "<icon-prev> <icon-play> <icon-pause> <icon-stop> <icon-next> <label-time> <label-song> "

format-offline = <label-offline>

#####################################################################

; application launchers

[module/terminal]
type = custom/text
content = 󰆍
click-left = lxterminal &
content-underline = ${color.suggestion}


[module/filemanager]
type = custom/text
content = 󰉋
click-left = pcmanfm &
content-underline = ${color.suggestion}


[module/browser]
type = custom/text
content = 󰈹
click-left = firefox &
content-underline = ${color.suggestion}


[module/mailclient]
type = custom/text
content = 󰇮
click-left = thunderbird &
content-underline = ${color.suggestion}


[module/passwdmanager]
type = custom/text
content = 󰌋
click-left = keepassxc &
content-underline = ${color.suggestion}


[module/calc]
type = custom/text
content = 󰃬
click-left = galculator &
content-underline = ${color.suggestion}
